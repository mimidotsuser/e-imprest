{% from 'partials/macros.twig' import  feeback as alert%}
{% extends "partials/skeleton.twig" %}

{% block holder %}


    <div class="container py-3">
        <div class="row">
            <div class="col-md-12">
                {#<h2 class="text-center text-dark text-uppercase  ">Staff Portal</h2>#}
                <div class="row">
                    <div class="col-md-8 mx-auto">

                        <div class="text-center pb-2">
                            <img src="/public/images/logo.png" class="l-logo" alt="kisii_logo"/>
                        </div>

                        <div class="card rounded-0">
                            <div class="card-body">

                                    {{ alert(notify) }}

                                <form class="form" role="form" action="/login" method="POST" autocomplete="off">

                                    <input type="text" name="csrf_token" id="csrf" hidden value="{{ csrf }}"
                                           placeholder="">

                                    <div class="form-group">
                                        <label for="uname1">Username</label>
                                        <input type="text" class="form-control form-control-lg rounded-0" name="userid"
                                               id="uname1" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="ps">Password</label>
                                        <input type="password" class="form-control form-control-lg rounded-0" id="ps"
                                               name="pass"
                                               required>
                                    </div>
                                    <div class="float-right">
                                        <button type="submit" class="btn btn-success " id="btnLogin">Login
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>


                </div>

            </div>
        </div>
    </div>

{% endblock %}
